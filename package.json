{
	"name": "obsidian-sample-plugin",
	"version": "0.12.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"fix:format": "biome format --write src",
		"lint:format": "biome format src",
		"fix:lint": "biome lint --write src",
		"lint": "biome check src",
		"fix": "biome check --write src",
		"dev": "node esbuild.config.mjs",
		"esbuild": "node esbuild.config.mjs production",
		"build": "pnpm esbuild",
		"e2e:setup": "npx playwright test tests/e2e-setup/setup.ts --project e2e-setup",
		"e2e:cleanup": "playwright test tests/e2e-setup/cleanup.ts --project e2e-setup",
		"e2e": "npm run build && playwright test --project e2e"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@electron/asar": "^4.0.0",
		"@playwright/test": "^1.52.0",
		"@tsconfig/svelte": "^5.0.0",
		"@types/node": "^22.15.29",
		"builtin-modules": "^5.0.0",
		"electron": "^36.3.2",
		"esbuild": "^0.25.5",
		"esbuild-svelte": "^0.9.3",
		"npm-run-all": "^4.1.5",
		"obsidian": "^1.4.11",
		"sass": "^1.72.0",
		"svelte": "^5.33.13",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3"
	}
}
